<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.15.0/jquery.validate.min.js"></script>
<link rel="stylesheet" type="text/css" href="css/main.css">
<title>Insert title here</title>
</head>
<body>
<form id="tiedot">
	<table>
		<thead>
			<tr>
				<th colspan="5" class="th1"><span id="takaisin">Takaisin listaukseen</span></th>
			</tr>
			<tr>
				<th>Etunimi</th>
				<th>Sukunimi</th>
				<th>Puhelin</th>
				<th>Sposti</th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td><input type="text" name="etunimi" id="etunimi"></td>
				<td><input type="text" name="sukunimi" id="sukunimi"></td>
				<td><input type="text" name="puhelin" id="puhelin"></td>
				<td><input type="text" name="sposti" id="sposti"></td>
				<td><input type="submit" name="tallenna" id="lisää"></td>
			</tr>
		</tbody>
	</table>
</form>
<span id="ilmoitus"></span>
</body>
<script type="text/javascript">
$(document).ready(function() {
	$("#takaisin").click(function() {
		document.location="listaaasiakkaat.jsp";
	});
	$("#tiedot").validate( {
		rules: {
			etunimi: {
				required: true,
				minlenght: 2,
				maxlenght: 50,
			},
			sukunimi: {
				required: true,
				minlenght: 2,
				maxlenght: 50,
			},
			puhelin: {
				required: true,
				minlenght: 8,
				maxlenght: 20,
			},
			sposti: {
				required: true,
				email: true,
				minlenght: 8,
				maxlenght: 100
			}
		},
		messages: {
			etunimi: {
				required: "Puuttuva tieto",
				minlenght: "Liian lyhyt",
				maxlenght: "Liian pitkä",
			},
			sukunimi: {
				required: "Puuttuva tieto",
				minlenght: "Liian lyhyt",
				maxlenght: "Liian pitkä",
			},
			puhelin: {
				required: "Puuttuva tieto",
				minlenght: "Liian lyhyt",
				maxlenght: "Liian pitkä",
			},
			sposti: {
				required: "Puuttuva tieto",
				email: "Ei ole sähköposti",
				minlenght: "Liian lyhyt",
				maxlenght: "Liian pitkä",
			}
		},
		submitHandler: function(form) {
			lisaaTiedot();
		}
	});
});

function lisaaTiedot() {
	var formJsonStr = formDataJsonStr($("#tiedot").serializeArray());
	$.ajax({url:"asiakkaat", data:formJsonStr, type:"POST", dataType:"json", success:function(result) {
		if (result.response == 0) {
			$("#ilmoitus").html("Asiakkaan lisääminen epäonnistui");
		} else if (result.response == 1) {
			$("#ilmoitus").html("Asiakkaan lisääminen onnistui");
			$("#etunimi", "sukunimi", "puhelin", "sposti").val("");
		}
	}});
}
</script>
</html>